extends base.pug

block content
    if errorMessage
        span=errorMessage
    form(method="POST")
        input(placeholder="Username", name="username", type ="text", requried)
        input(placeholder="Password", name="password", type ="password", requried)
        input(type="submit", value="Login")
        br
        a(href="/users/github/start") Continue with Github &rarr;
    hr
    div 
        span Don't have account? 
        a(href="/join") Create one now &rarr;